# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/seo-audit-tool
MONGODB_TEST_URI=mongodb://localhost:27017/seo-audit-tool-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random-123456789
JWT_EXPIRE=7d

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# API Keys
GOOGLE_PAGESPEED_API_KEY=your-google-pagespeed-api-key
GTMETRIX_API_KEY=your-gtmetrix-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Monitoring
LOG_LEVEL=info

# Frontend URL
FRONTEND_URL=http://localhost:3000